<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAF5F5"
    android:padding="12dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1,2,3"
        android:elevation="10dp"
        android:background="@android:color/white"
        android:padding="10dp">

        <TableRow
            android:elevation="10dp"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Location"
                android:textStyle="bold"
                android:textColor="#000" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Date"
                android:textStyle="bold"
                android:textColor="#000"
                android:gravity="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Time"
                android:textStyle="bold"
                android:textColor="#000"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D3D3D3"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="6dp" />

        <TableRow
            android:layout_marginTop="8dp">

            <TextView android:text="Main Gate" />

            <TextView
                android:text="10-2-2025"
                android:gravity="center" />

            <TextView
                android:text="10:30PM"
                android:gravity="center" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_play_arrow"
                app:tint="#1E88E5" />
        </TableRow>

        <TableRow
            android:layout_marginTop="8dp">

            <TextView android:text="Gate 2" />

            <TextView
                android:text="10-1-2025"
                android:gravity="center" />

            <TextView
                android:text="10:30PM"
                android:gravity="center" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_play_arrow"
                app:tint="#1E88E5" />
        </TableRow>

        <TableRow
            android:layout_marginTop="8dp">
            <TextView android:text="Gate 3" />
            <TextView android:text="9-24-2025" android:gravity="center" />
            <TextView android:text="10:30PM" android:gravity="center" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_play_arrow"
                app:tint="#1E88E5" />
        </TableRow>

        <TableRow
            android:layout_marginTop="8dp">
            <TextView android:text="Gate 2" />
            <TextView android:text="9-20-2025" android:gravity="center" />
            <TextView android:text="10:30PM" android:gravity="center" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_play_arrow"
                app:tint="#1E88E5" />
        </TableRow>

        <TableRow
            android:layout_marginTop="8dp">
            <TextView android:text="Main Gate" />
            <TextView android:text="9-13-2025" android:gravity="center" />
            <TextView android:text="10:30PM" android:gravity="center" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_play_arrow"
                app:tint="#1E88E5" />
        </TableRow>

    </TableLayout>
</LinearLayout>
